<link rel="stylesheet" href="/css/sign_in.css">
<div class="s-container">
    <h1>Edit Students Profile</h1>
    <form action="/user/update/<%=student._id%>" method="post" >
        <label for="sname">Name</label>
        <input type="text" name="name" placeholder="<%=student.name%>" id="sname" value="<%=student.name%>">
        <label for="semail">Email</label>
        <input type="email" name="email" placeholder="<%=student.email%>" id="semail" value="<%=student.email%>">
        <label for="sbatch">Batch</label>
        <input type="text" name="batch" placeholder="<%=student.batch%>" itemref="sbatch"value="<%=student.batch%>">
        <label for="scollege">College</label>
        <input type="text" name="college" placeholder="<%=student.college%>" id="scollege" value="<%=student.college%>">
        <label for="placed-status">Placement Status</label>
        <select name="placed_status" id="placed-status" >
            <option value="Not Placed" selected>Not Placed</option>
            <option value="Placed">Placed</option>
        </select>
        <div id="score">
            <label for="sdsa">DSA Score :</label>
            <input type="number" name="dsa_score" max="100" min="0" id="sdsa" value="<%=student.dsa_score%>" placeholder="<%=student.dsa_score%>">
            <label for="swdb">WEB-D Score :</label>
            <input type="number" name="webd_score" max="100" min="0" id="swdb" value="<%=student.webd_score%>" placeholder="<%=student.webd_score%>">
            <label for="sreact">React Score :</label>
            <input type="number" name="react_score" max="100" min="0" id="sreact" value="<%=student.react_score%>" placeholder="<%=student.react_score%>">
        </div>
        <button type="submit">Save Edit</button>
    </form>
</div>